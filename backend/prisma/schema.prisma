generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // WaÅ¼ne dla Vercel Postgres
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Int
  image       String
  createdAt   DateTime @default(now())
}

model Order {
  id            String   @id @default(uuid())
  stripeSession String   @unique // ID sesji Stripe do weryfikacji
  amount        Int
  status        String   @default("pending") // pending -> paid
  customerEmail String?
  createdAt     DateTime @default(now())
}